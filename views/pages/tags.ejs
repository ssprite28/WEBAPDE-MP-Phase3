<!doctype html>
<html>
<head>
<title>dankmems: Memes are Dreams</title>
<!--<link rel="stylesheet" href="Home.css">-->
<style>
.header{
    background-color: black;
    box-shadow: 0 1px 0px rgba(0,0,0,.2);
    height:50px;
}

html,body{
    font: Helvetica Nueue;
    font-family: sans-serif;
    background-color: #E6ECF0;
    height: 100%;
    width: 100%;
}

.nav {
    width: 300px;
    display: flex;
    flex-direction: row;
}

.container{
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.tags{
    color: dodgerblue;
    font-weight: bold;
    padding: 20px;
    display: inline-block;
    cursor: pointer;
}

.tagsresult{
    border-bottom: 0.5px #E6ECF0 solid;
    padding: 20px;
}

.tags:hover{
    color:deepskyblue;
}

.poster{
    font-family: sans-serif;
    margin-left: 25px;
    height: 20px;
}

label{
    font-weight: bold;
}

.searchtag{
    border-bottom: 0.5px #E6ECF0 solid;
    padding: 20px;
}

img{
    padding-top: 20px;
    max-width: 650px;
    max-height: 650px;
}

.main{
    background-color: white;
    width: 1000px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: auto;
    padding: 20px;
}


.home, .trend, .taglist{
    margin: 10px;
    font-size: 25px;
    color: white;
    position: absolute;
    top: 5px;
    font-family: "Comic Sans MS";
    left: 150px;
}

a{
    text-decoration: none;
}


.trend{
    left: 350px;
}

.taglist{
       left: 550px;
}

.home:hover, .taglist:hover, .trend:hover{
    color:gainsboro;
    cursor: pointer;
}

.register{
    color: white;
    background-color: rgb(0, 110, 239);
    padding: 9px 13px;
    font-weight: bold;
    position: absolute;
    right: 15px;
    top: 14px;
    text-decoration: none;
}

.register:hover{
    color: gainsboro;
    cursor: pointer;
}


.login{
    color:white;
    float: right;
    padding: 5px;
    position: absolute;
    right: 130px;
    top: 16px;
    font-weight: bold;
    font-size: 20px;
    text-decoration: none;
}

.login:hover{
    cursor: pointer;
    color: gainsboro;
}


.post{
    border-bottom: 0.5px #E6ECF0 solid;
    padding: 20px;
}

.title{
    margin-left: 10px;
    font-size: x-large;
    font-weight: 700;
    font-family: sans-serif;
    margin-top: 10px;
}

.searchbtn{
    color: black;
}


</style>
<script>
function searchTag(){
    var searchTag = document.getElementById("searchbar").value;
    <% for(var j=0;j<data.tag.length;j++) { %>
            var tag="";
            tag = data.tag[j].body;
            if(searchTag.toUpperCase() == tag.toUpperCase())
            <%- include('./tags-row', {
                tag: data.tag[j].body,
        }); %>
         <% } %>
}
</script>
</head>
    
<body>
<div class="container">
<div class="header">
    <nav class="nav">
        <span><a href="/" class="home">dankmems</a></span>
        <span><a href="/" class="trend">on firee</a></span>
        <span><a href="/tags" class="taglist">tags</a></span>
        <span><a href="/login" class="login">Log in</a></span>
        <span><a href="/register" class="register" >Register</a></span>
    </nav>
</div>
<div class="main">
 <div class="searchtag">
        <label>Search Tag: </label><input type="text" name="searchbar" />
        <button class="searchbtn" onclick="searchTag()">Search</button>
    </div>
    <div class="results">
    
    </div>
    <div>
        <label>All Tags:</label>
        <% for(var j=0;j<data.tag.length;j++) { %>
            <%- include('./tags-row', {
                tag: data.tag[j].body,
        }); %>
         <% } %>
    </div>
    <div>
        
        
    </div>
    
</div>
</div>
</body>
</html>
