<!DOCTYPE HTML>
<html>
<head>
<style>
    .header{
    background-color: black;
    box-shadow: 0 1px 0px rgba(0,0,0,.2);
    height:50px;
}

html,body {
    font: Helvetica Nueue;
    font-family: sans-serif;
    background-color: #E6ECF0;
    height: 100%;
    width: 100%;
}

.nav {
    width: 300px;
    display: flex;
    flex-direction: row;
}

.container{
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.tags:hover{
    color:deepskyblue;
}

.poster{
    font-family: sans-serif;
    height: 20px;
}

label{
    font-weight: bold;
}

img{
    height: 100%;
    width: 100%;
    padding-top: 20px;
    display: flex;
    justify-content: center;
    align-items:center;
    margin: auto;
}

.main{
    background-color: white;
    width: 1000px;
    height: 100%;
    display: flex;
    flex-direction: column;
    object-fit:contain;
    margin: auto;
}

footer{
    background-color: white;
    width: 1000px;
    
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin: auto;
}

.tags{
    color: dodgerblue;
    font-weight: bold;
    padding: 20px;
    display: inline-block;
    cursor: pointer;
}

.footerlist {
    font-weight: bold;
    color: black;
    padding: 20px;
    display: inline-block;
    cursor: pointer;
}

.footeritem {
    color: black;
    margin-left: auto
    padding: 20px;
    display: inline-block;
    cursor: pointer;
}

.footer {
    background-color: white;
}

.home, .trend, .taglist{
    margin: 10px;
    font-size: 25px;
    color: white;
    position: absolute;
    top: 5px;
    font-family: "Comic Sans MS";
    left: 150px;
}

a{
    text-decoration: none;
}
    
.trend{
    left: 350px;
}

.taglist{
       left: 550px;
}

.home:hover, .taglist:hover, .trend:hover, .footerlist:hover{
    color:gainsboro;
    cursor: pointer;
}

.register{
    color: white;
    background-color: rgb(0, 110, 239);
    padding: 9px 13px;
    font-weight: bold;
    position: absolute;
    right: 15px;
    top: 14px;
    text-decoration: none;
}

.register:hover{
    color: gainsboro;
    cursor: pointer;
}


.login{
    color:white;
    float: right;
    padding: 5px;
    position: absolute;
    right: 130px;
    top: 16px;
    font-weight: bold;
    font-size: 20px;
    text-decoration: none;
}

.login:hover{
    cursor: pointer;
    color: gainsboro;
}


.post{
    padding: 20px;
}

.title{
    font-size: x-large;
    font-weight: 700;
    font-family: sans-serif;
    margin-top: 10px;
}

footer ul {
  list-style: none;
  display: block;
  float: left;
}
footer h3 {
  font-weight: 100;
  margin-bottom: 0;
}

.username{
    color:white;
    float: right;
    padding: 5px;
    position: absolute;
    right: 300px;
    top: 16px;
    font-weight: bold;
    font-size: 20px;
    text-decoration: none;
}

</style>
<script>
function goBack(){
    window.history.back();
}    
</script>
</head>

<% var months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];

   var minutes;

   if (data.post.timestamp.getMinutes() < 10)
       minutes = '0' + data.post.timestamp.getMinutes();
   else
       minutes = data.post.timestamp.getMinutes();

var remove;
if(user != undefined){
    if (data.post.uploadedBy === user)
        remove = 'remove';
    else {
        remove = '';
        console.log("User in post: " + user);
    } 
}

var login, loginhref, username, register, registerhref, usernamehref;
    
    if(user === undefined){
        login = "Log in";
        loginhref = "/";
        username = "Guest";
        register = "Register";
        registerhref = "/register";
        usernamehref = "/";
    }else{
        login = "Log out";
        loginhref = "/logout";
        username = "User: " + user;
        register = "Profile";
        registerhref = "/profile";
        usernamehref = "/profile";
    }


%>

<body>
<div class="container">
    <div class="header">
        <nav class="nav">
        <span><a href="/home" class="home">dankmems</a></span>
        <span><a href="/home" class="trend">on firee</a></span>
        <span><a href="/tags" class="taglist">tags</a></span>
        <span><a href='<%=usernamehref%>' class="username"><%=username%></a></span>
        <span><a href="<%=loginhref%>" class="login"><%=login%></a></span>
        <span><a href="<%=registerhref%>" class="register" ><%=register%></a></span>
    </nav>
    </div>
    <div class="main">
        <div class='post'>
            <div>
                <span class='title'><%=data.post.title%></span>
            </div>
            <div>
            <br/>
            <span class='poster'>by: <a href='/user-profile?id=<%=data.post.uploadedBy %>' onclick="goBack()"><%=data.post.uploadedBy%></a></span>

            </div>
            <div>
                <span class = 'timestamp'>Published on <%=months[data.post.timestamp.getMonth()]%> <%=data.post.timestamp.getDate()%>, <%=data.post.timestamp.getFullYear()%> at <%=data.post.timestamp.getHours()%>:<%=minutes%> </span>
            </div>
    <div>
            <img id='<%=data.post.picture %>' src = 'upload/<%=data.post.picture %>'/>
    </div>
    <br/>
    <div>
        <span class=<%=remove%>><input class='bottombutton' type="button" value='Like'></span>
        <span><input type="button" class='bottombuttons' value='Share'></span>
        <span><input type="button" class='lastbutton' value='Comment'></span>
    </div>
    <br><span class='likes'>Likes: <%=data.post.likes%></span><br>
    <label>Tags:</label>
    
            <% for(var j=0;j<data.post.tags.length;j++) { %>
            <%- include('./tags-row', {
                tag: data.post.tags[j],
        }); %>
    
        <% } %>
        </div>
    </div>
</div>
</body>
</html>